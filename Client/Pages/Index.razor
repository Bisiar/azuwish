    .autocomplete .option {
      display: block;
      padding: 0.25rem;
    }
    .autocomplete .option .option-text {
      padding: 0.25rem 0.5rem;
      font-size: 18px;
    }
    .autocomplete .option:hover {
      background: #1E90FF;
      color: #fff;
    }
    .autocomplete .option.disabled {
