<style>
    .autocomplete {
      position: relative;
    }
    .autocomplete .options {
      position: absolute;
      top: 40px;
      left: 0;
      background: white;
      width: 100%;
      padding: 0;
      z-index: 10;
      border: 1px solid #ced4da;
      border-radius: 0.5rem;
      box-shadow: 0 30px 25px 8px rgba(0, 0, 0, 0.1);
